{
  "name": "utop",
  "version": "1.0.1",
  "author": {
    "name": "Anton Fisher",
    "email": "a.fschr@gmail.com",
    "url": "http://antonfisher.com"
  },
  "description": "utop - single process monitoring",
  "bin": "index.js",
  "main": "index.js",
  "engines": {
    "node": "8.9.0"
  },
  "scripts": {
    "start": "node index.js --",
    "demo": "node index.js --demo",
    "debug": "node --inspect index.js --demo",
    "lint": "eslint --ignore-path .gitignore -- .",
    "prettier": "prettier --ignore-path .gitignore --write './**/*.js'",
    "format": "npm run prettier && npm run lint",
    "test": "exit 1",
    "test:cpu": "node index.js -- node ./tests/scriptLoadCpuMemWithChildren.js",
    "test:stress": "node index.js -- stress -c 3 -m 3 --vm-hang 0 --vm-bytes 1g -t 10",
    "test:install-dev-to-global": "sudo npm -g remove utop && sudo npm install -g ./ && npm list -g --depth 0",
    "release:patch": "npm run format && npx standard-version -r patch && git push --follow-tags origin master",
    "release:minor": "npm run format && npx standard-version -r minor && git push --follow-tags origin master",
    "release:major": "npm run format && npx standard-version -r major && git push --follow-tags origin master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antonfisher/utop.git"
  },
  "keywords": [
    "top"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/antonfisher/utop/issues"
  },
  "homepage": "https://github.com/antonfisher/utop",
  "dependencies": {
    "blessed": "0.1.81",
    "commander": "2.13.0",
    "pidusage": "1.2.0",
    "ps-tree": "1.1.0",
    "sparkline": "0.2.0",
    "terminate": "2.1.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "eslint": "4.16.0",
    "eslint-config-eslint": "4.0.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-prettier": "2.5.0",
    "prettier": "1.10.2"
  }
}
